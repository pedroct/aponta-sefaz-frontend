{
  "manifestVersion": 1,
  "id": "aponta-projetos-staging",
  "version": "1.1.3",
  "name": "Aponta (Staging)",
  "description": "[STAGING] Extensão para gerenciamento de apontamentos de horas em atividades dos projetos de engenharia de software da Sefaz Ceará",
  "publisher": "sefaz-ceara",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "icons": {
    "default": "images/icon-128.png"
  },
  "categories": [
    "Azure Boards"
  ],
  "tags": [
    "timetracker",
    "time tracking",
    "timesheet",
    "apontamento",
    "horas",
    "gestão de projetos",
    "sefaz",
    "staging",
    "homologação"
  ],
  "scopes": [
    "vso.profile",
    "vso.work_write",
    "vso.identity"
  ],
  "demands": [],
  "contributions": [
    {
      "id": "addTimePopupDialog",
      "type": "ms.vss-web.control",
      "description": "Modal para apontar tempo em task/bug usando componente React",
      "targets": [],
      "properties": {
        "uri": "dist/public/extension.html?workItemId={{id}}"
      }
    },
    {
      "id": "addTimeAction",
      "type": "ms.vss-web.action-provider",
      "description": "Ação para abrir modal de apontamento",
      "targets": [
        "ms.vss-work-web.work-item-context-menu"
      ],
      "properties": {
        "title": "⏱️ Apontar Tempo",
        "uri": "pages/actions/addTimeAction.html"
      }
    }
  ],
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "pages",
      "addressable": true
    },
    {
      "path": "images",
      "addressable": true
    }
  ],
  "gallery": {
    "color": "#FFA500",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/pedroct/aponta-sefaz-frontend"
  }
}
